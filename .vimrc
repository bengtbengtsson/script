set nocompatible

filetype indent plugin on

syntax on

set autoindent

set laststatus=2

set visualbell

set number relativenumber

set ruler

set shiftwidth=2
set softtabstop=2
set expandtab

set textwidth=79

nnoremap <Left>  :echo "No arrow keys, please"<CR>
nnoremap <Right> :echo "No arrow keys, please"<CR>
nnoremap <Up>    :echo "No arrow keys, please"<CR>
nnoremap <Down>  :echo "No arrow keys, please"<CR>
inoremap <Left>  :echo "No arrow keys, please"<CR>
inoremap <Right> :echo "No arrow keys, please"<CR>
inoremap <Up>    :echo "No arrow keys, please"<CR>
inoremap <Down>  :echo "No arrow keys, please"<CR>
vnoremap <Left>  :echo "No arrow keys, please"<CR>
vnoremap <Right> :echo "No arrow keys, please"<CR>
vnoremap <Up>    :echo "No arrow keys, please"<CR>
vnoremap <Down>  :echo "No arrow keys, please"<CR>
